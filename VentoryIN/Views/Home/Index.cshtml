@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
</head>
<style>
    a {
        text-decoration: none;
    }

</style>
<body style="font-family: 'Quicksand', sans-serif;">
    <div class="container-fluid p-5">
        <h2 class="fw-bold pb-3">Panel de control</h2>
        <div class="container-fluid rounded-3 py-3 px-4" style="background-color: #f3f3f3;">
            <p class="fw-normal">Bienvenido, la fecha de hoy es:</p>
            <h4 id="current_date" class="fw-bold"></h4>
        </div>
        <div class="row d-flex mt-5 text-white text-center align-items-center align-content-center">
            <a class="col" asp-area="" asp-controller="Home" asp-action="Productos">
                <div class="col text-white rounded-3 p-3 text-center d-flex align-items-center align-self-center" style="background-color: #FD7702;">
                    <img src="~/images/productIcon.png" style="width: 10%; height: 10%;" />
                    <h5 class="ps-4 text-center d-flex align-items-center align-self-center"> CATEGORÍAS</h5>
                </div>
            </a>
            <a class="col" asp-area="" asp-controller="Home" asp-action="Productos">
                <div class="col text-white rounded-3 d-flex p-3 text-center align-items-center align-content-center" style="background-color: #FD7702;">
                    <img src="~/images/entradasIcon.png" style="width: 10%; height: 10%; " />
                    <h5 class="ps-4"> ENTRADAS</h5>
                </div>
            </a>
            <a class="col text-center align-items-center align-content-center" asp-area="" asp-controller="Home" asp-action="Productos">
                <div class="col text-white rounded-3 d-flex p-3 text-center align-items-center align-content-center" style="background-color: #FD7702;">
                    <img src="~/images/salidasIcon.png" style="width: 10%; height: 10%;" />
                    <h5 class="ps-4"> SALIDAS</h5>
                </div>
            </a>
        </div>
        @*Agregar grafica conectada a base de datos*@
    </div>
    @section scripts {
        @*PARA OBTENER Y MOSTRAR FECHA ACTUAL*@
        <script>
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            let dateStr = new Date().toLocaleDateString('es-ES', options);

            // Para convertir la primera letra de la cadena a mayúscula y el resto a minúscula
            dateStr = dateStr.charAt(0).toUpperCase() + dateStr.slice(1);

            document.getElementById("current_date").innerHTML = dateStr;
        </script>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
