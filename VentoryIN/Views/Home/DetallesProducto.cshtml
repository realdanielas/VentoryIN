@model dynamic

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Detalles del Producto</title>
</head>

<body style="font-family: 'Quicksand', sans-serif;">
    <div class="container p-4">
        <h2 class="text-center">@Model.nombreProducto</h2>
        <p class="text-muted text-center">@Model.descripcion</p>
        <div class="text-center">
            <span class="badge bg-info">Categoría: @Model.categoriaID</span>
        </div>
        <div class="mt-4">
            <!-- Puedes agregar más detalles aquí -->
            <p><strong>ID del Producto:</strong> @Model.productoID</p>
            <p><strong>Fecha de creación:</strong> @Model.fechaCreacion</p>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <button class="btn btn-secondary" onclick="window.close();">Cerrar</button>
        </div>
    </div>
</body>

</html>
