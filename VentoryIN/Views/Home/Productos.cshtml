@{
    ViewData["Title"] = "Categorías";
    Layout = "_Layout";
    var todasLasCategorias = ViewData["TodasLasCategorias"] as IEnumerable<dynamic>;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
</head>

<body style="font-family: 'Quicksand', sans-serif;">
    <div class="container-fluid p-5">
        <div class="d-flex justify-content-between mb-5">
            <h2><a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/arrow-gray-2.png" /></a> Categorías</h2>
            <a type="button" class="btn text-white text-center align-items-center align-content-center" style="background-color: #FD7702;"
                asp-area="" asp-controller="Home" asp-action="CrearCategoriaProducto">
                + Nueva clasificación
            </a>
        </div>
        <div class="row">
            @if (todasLasCategorias != null && todasLasCategorias.Any())
            {
                @foreach (var _categoria in todasLasCategorias)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h4 class="card-title text-center fw-bold text-uppercase">@_categoria.nombreCategoria</h4>
                                <form asp-controller="Home" asp-action="EliminarCategoria" method="post">
                                    <input type="hidden" name="id" value="@_categoria.categoriaID" />
                                    <div class="d-flex justify-content-center mt-3">
                                        <button type="submit" class="btn btn-danger mx-3">Eliminar</button>
                                        <a href="@Url.Action("ProductoStock", "Home", new { categoriaNombre = @_categoria.nombreCategoria })" class="btn text-white text-center align-items-center align-content-center mx-3" style="background-color: #FD7702;">Ver Productos</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center text-muted">No hay categorías disponibles.</p>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
