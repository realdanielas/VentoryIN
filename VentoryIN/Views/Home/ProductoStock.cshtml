@{
    ViewData["Title"] = "Producto Stock ";
    Layout = "_Layout";
    var todosLosProductos = ViewData["TodosLosProductos"] as IEnumerable<dynamic>;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
</head>

<body style="font-family: 'Quicksand', sans-serif;">
    <div class="container-fluid p-5">
        <div class="d-flex justify-content-between mb-5">
            <h2>
                <a asp-area="" asp-controller="Home" asp-action="Productos">
                    <img src="~/images/arrow-gray-2.png" />
                </a>
                Productos
            </h2>
            <a type="button" class="btn text-white text-center align-items-center align-content-center" style="background-color: #FD7702;"
               asp-area="" asp-controller="Home" asp-action="CrearProducto">
                + Agregar Producto
            </a>
        </div>

        <!-- Mostrar productos en tarjetas -->
        <div class="row mt-5">
            @if (todosLosProductos != null && todosLosProductos.Any())
            {
                @foreach (var producto in todosLosProductos)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title text-center">@producto.nombreProducto</h5>
                                <p class="card-text text-center text-muted">@producto.descripcion</p>
                                <div class="text-center">
                                    <span class="badge bg-info">Categoría: @producto.categoriaID</span>
                                </div>
                                <div class="d-flex justify-content-between mt-3">
                                    <!-- Formulario para eliminar -->
                                    <form asp-controller="Home" asp-action="EliminarProducto" method="post">
                                        <input type="hidden" name="id" value="@producto.productoID" />
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                    </form>
                                    <!-- Botón para más detalles -->
                                    <!--<a href="#" class="btn text-white text-center align-items-center align-content-center mx-3"
                                        style="background-color: #FD7702;">Ver detalles</a>-->
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center text-muted">No hay productos disponibles.</p>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
