@{
    ViewData["Title"] = "Proveedores";
    var proveedores = ViewData["Proveedores"] as IEnumerable<dynamic>;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container p-4">
        <div class="d-flex justify-content-between mb-5">
            <h2>
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/arrow-gray-2.png" />
                </a>
                Proveedores
            </h2>
            <a class="btn text-white text-center align-items-center align-content-center mb-4" style="background-color: #FD7702;"
                asp-controller="Home" asp-action="CrearProveedores">+ Agregar Proveedor</a>
           
            </a>
        </div>

        
        <div class="d-flex justify-content-end pt-3">
            
        </div>

        <!-- Tabla de proveedores -->
        @if (proveedores != null && proveedores.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre del Proveedor</th>
                        <th>Contacto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var proveedor in proveedores)
                    {
                        <tr>
                            <td>@proveedor.proveedorID</td>
                            <td>@proveedor.nombreProveedor</td>
                            <td>@proveedor.contacto</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted text-center">No hay proveedores registrados.</p>
        }
    </div>
</body>

</html>
